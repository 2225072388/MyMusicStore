@using MusicStore.ViewModels
@model MusicStore.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    var msg = "";
    if (ViewBag.LoginUserStatus != null)
    {
        msg = (ViewBag.LoginUserStatus as LoginUserStatus).Message;
    }
}

<h2>用户登录</h2>
<p>如果没有用户名,请注册 @Html.ActionLink("注册","Register")</p>
@using (Html.BeginForm("Login","Account"))
{ 
<div>
    <fieldset>
        <legend>账户信息</legend>
        <div class="editor-label>
            @Html.LabelFor(x => x.UserName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(x=>x.UserName, new { placeholder = "请输入用户名" })
            @Html.ValidationMessageFor(x => x.UserName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(x => x.PassWord)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(x => x.PassWord,new { placeholder="请输入用户名密码"})
            @Html.ValidationMessageFor(x => x.PassWord)
        </div>
        <p class="text-danger">
            @msg
        </p>
        <p>
            <input type="submit" value="登录" class="btn btn-success" style="width: 70px" />
        </p>
    </fieldset>

</div>
}