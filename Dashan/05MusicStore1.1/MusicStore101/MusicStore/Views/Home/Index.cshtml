
@model IEnumerable<MusicStoreEntity.Album>

@{
    ViewBag.Title = "首页";
}
<div id="promotion"></div>
<h3><em>新歌</em></h3>
<div>
    <ul id="album-list">
        @foreach(var item in Model)
        {
            <li>
                <a href="@Url.Action("detail","store",new { id=item.ID})">
                <img  alt="@item.Title" src="@item.AlbumaArtUrl"/>
                    <span>@item.Artist.Name</span><br />
                </a>
            </li>
        }
    </ul>
</div>
