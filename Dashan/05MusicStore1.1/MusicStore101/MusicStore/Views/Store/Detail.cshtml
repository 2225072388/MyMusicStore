@model MusicStoreEntity.r
@model MusicStoreEntity.Album
@{
    ViewBag.Title = "专辑明细";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h2>@Model.Title</h2>

<p>
    <img alt="@Model.Title" src="@Model.AlbumaArtUrl" />
</p>


<div id="album-details">
    <div id="box-video">
        <div class="cd" style="background: url@(Model.AlbumaArtUrl)no-repeat; ">
            <div class="cd-center">
                <audio src="@Model.MusicUrl" controls autoplay loop></audio>
            </div>
        </div>
    </div>

    <p>
        <em>
            分类：
        </em>
        @Model.Genre.Name
    </p>


    <p>
        <em>
            歌手：
        </em>
        @Model.Artist.Name
    </p>


    <p>
        <em>
            发布时间：
        </em>
        @Model.PublisherDate.ToString("yyyy年MM月dd日");
    </p>

    <p>
        <em>
            价格：
        </em>
        @String.Format("{0:F}", Model.Price)
    </p>

    <div id="msg"></div>
    <p class="btn btn-info btn-group-sm" id="addcart">
        添加购物车
    </p>
    <div id="msg"></div>
    <br />

    @*添加编辑器*@
    <!-- 配置文件 -->
    <script id="container" name="Content" type="text/plain">

    </script>
    <script type="text/javascript" src="~/Content/Ueditor/ueditor.config.js"></script>
    <!-- 编辑器源码文件 -->
    <script type="text/javascript" src="~/Content/Ueditor/ueditor.all.js"></script>
    <!-- 修复查询补丁 -->
    <script type="text/javascript" charset="utf-8" src="~/Content/Ueditor/ueditor-patch-149.js"></script>

    <!-- 实例化编辑器 -->
    <script type="text/javascript">
        var ue = UE.getEditor('container');
    </script>
    <br />
    <button type="submit" class="btn btn-info btn-sm" id="addmusic">
        <span class="glyphicon glyphicon-fire"> 评论</span>
    </button>
    <br />
</div>

<script>
    $("#addcart").click(function () {
//异步
        $("#msg").html("<img src = '../../Content/Images/Loading.gif'>添加到购物车，请稍后......");
        $.ajax({
            type: 'post',
            async: true,
            url: '../../ShoppingCart/AddCart',
            data:{id:"@Model.ID"},
            dataType:'json',
            success: function (data) {
                //如果没有登录，跳回登录页
                if (data == "nologin")
                    location.href = "@Url.Action("login", "Account", new { returnUrl = Url.Action("Detail","Store",new { id = Model.ID })})";
                else {
                    //添加购物车成功后，动画消失
                    $("#msg").html(data);
                    //两秒后重新刷新此页面
                    setTimeout(function () {
                        location.reload();
                    },
                    2000);
                }
            }
        });
    });
</script>
