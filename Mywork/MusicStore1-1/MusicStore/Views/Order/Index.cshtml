@model IEnumerable<MusicStoreEntity.Order>
@{
    ViewBag.Title = "我的订单";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h2>我的订单</h2>

<table>
    <tr>
        <th>订单摘要</th>
        <th>明细</th>
        <th>总价</th>
        <th>状态</th>
    </tr>
    <tbody id="tbCart">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span class="text-warning">@item.TradeNo</span><br/>
                    收件人:@item.AddressPerson<br/>
                    收货地址:@item.Address<br/>
                    电话:@item.MobilNumber<br/>
                </td>
                <td>

                    @foreach (var i in item.OrderDetails)
                    {
                        <span class="text-primary">@i.Album.Title,@i.Count 哦</span><br/>
                    }

                </td>
                <td>
                    $@item.TotalPrice.ToString("C")
                </td>

                <td>
                    @item.EnumOrderStatus
                    @if (item.EnumOrderStatus ==MusicStoreEntity.EnumOrderStatus.未付款)
                    {
                        <a style="color:yellow" class="btn btn-success" href="@Url.Action("alipay","Pay",new { id=item.ID})"><i class="glyphicon glyphicon-usd"></i> 立即支付</a>
                    }
                        
                </td>

            </tr>
        }

    </tbody>
</table>
